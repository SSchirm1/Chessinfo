@model IEnumerable<Chessinfo.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Players" asp-action="Index" method="get">
    <label>Search for player</label>
    <input type="text" name="searchString"/>
    <input type="submit" value="Filter"/> 
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>

            <th>@Html.DisplayNameFor(model => model.TitleId)</th>
          
            <th>@Html.DisplayNameFor(model => model.Country)</th>
          
            <th>
                @Html.DisplayNameFor(model => model.classicalRating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Title.TitleCode)</td>
           
            <td>@Html.DisplayFor(modelItem => item.Country.CountryCode)</td>

            <td>
                @Html.DisplayFor(modelItem => item.classicalRating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
